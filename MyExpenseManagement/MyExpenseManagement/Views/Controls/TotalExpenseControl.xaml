<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyExpenseManagement.Views.Controls.TotalExpenseControl"
             x:Name="root">
    <VerticalStackLayout>

        <Label Text="Total" Margin="20,20,0,10"
               FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
        <Label FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               Text="{Binding Total, Source={x:Reference root}, StringFormat='{}{0:c}'}"
               FontSize="40" Margin="20,0,0,25"/>
    </VerticalStackLayout>
</ContentView>
