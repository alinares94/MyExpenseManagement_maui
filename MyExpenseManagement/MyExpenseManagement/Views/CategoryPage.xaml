<?xml version="1.0" encoding="utf-8" ?>
<core:PageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:core="clr-namespace:MAUI.Core.Views;assembly=MAUI.Core"
               x:Class="MyExpenseManagement.Views.CategoryPage"
               xmlns:cp="https://trungnt2910.github.io/schemas/maui/2022/colorpicker"
               xmlns:vm="clr-namespace:MyExpenseManagement.ViewModels"
               x:TypeArguments="vm:CategoryViewModel"
               Title="CategorÃ­a">
    <core:PageBase.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
    </core:PageBase.Resources>
    <VerticalStackLayout Padding="20">
        <Label Text="Icon"/>
        <Entry/>

        <Label Text="Color"/>
        <cp:ColorPicker HeightRequest="100"
                            x:Name="ColorPicker"
                            PickedColor="Red"/>
        <Border HeightRequest="20" x:Name="selectedColor" 
                    BackgroundColor="{Binding PickedColor, Source={x:Reference ColorPicker}}"
                    Margin="0,5,0,0"/>

        <Label Text="Nombre"/>
        <Entry/>

    </VerticalStackLayout>
</core:PageBase>